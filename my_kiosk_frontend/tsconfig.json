{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Libraries to include
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking for declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit output
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Specify module code generation
    "moduleResolution": "node", // Specify module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Ensures each file can be transpiled independently
    "jsx": "preserve", // JSX code generation
    "incremental": true, // Enable incremental compilation for faster builds
    "plugins": [
      {
        "name": "next" // Enable Next.js support
      }
    ],
    "baseUrl": ".", // Set the base URL for module resolution
    "paths": {
      "@/*": ["src/*"] // Aliasing for cleaner imports
    }
  },
  "include": [
    "next-env.d.ts", // Automatically generated by Next.js
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TSX files
    ".next/types/**/*.ts" // Include types from the Next.js build
  ],
  "exclude": [
    "node_modules", // Exclude the node_modules folder
    ".next" // Optionally exclude the Next.js build folder
  ]
}
